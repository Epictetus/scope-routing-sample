<h1>Listing todos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Done</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todos.each do |todo| %>
  <tr>
    <td><%= todo.title %></td>
    <td><%= todo.done %></td>
    <td><%= link_to 'Show', todo_path(:uid => @uid, :id => todo.id) %></td>
    <td><%= link_to 'Edit', edit_todo_path(:uid => @uid, :id => todo.id) %></td>
    <td><%= link_to 'Destroy', todo_path(:uid => @uid, :id => todo.id), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Todo', new_todo_path(:uid => @uid) %>
